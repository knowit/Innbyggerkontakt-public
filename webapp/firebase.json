{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "target": "webapp",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/v1/outcome/**",
        "run": {
          "serviceId": "outcome",
          "region": "europe-west1"
        }
      },
      {
        "source": "/api/v1/admin/**",
        "run": {
          "serviceId": "admin",
          "region": "europe-west1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
